<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles/styles.css">
  <link rel="stylesheet" href="/styles/mobile.css">
  <title>Log in</title>
</head>

<body>
  <header>
    <div id="header">
      <h2>CompHub Services</h2>
    </div>
    <%- include('../partials/navlinks'); -%>
  </header>

  <div class="container">
    <div class="card">
      <div class="card-cont">
        <div id="log">
          <h2>Log-in</h2>
        </div>
        <form>
          <div>
            <div>Email</div>
            <input type="text" name="email" class="input" placeholder="Enter your email address" required>
            <div class="email error"></div>
          </div>
          <div>
            <div>Password</div>
            <input type="password" name="password" class="input" placeholder="Enter your password" required>
            <div class="password error"></div>
          </div>
          <div>
            <button class="btn">Log-in</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <script>
    const form = document.querySelector('form')

    form.addEventListener('submit', async (e) => {
      e.preventDefault()

      // Get Values
      const email = form.email.value
      const password = form.password.value


      try {
        const results = await fetch('/login', {
          method: 'POST',
          body: JSON.stringify({ email, password }),
          headers: { 'Content-Type': 'application/json' }
        })

        const data = await results.json()
        console.log(data)
        if (data.errors) {
          for (const key in data.errors) {
            if (!document.querySelector(`.${key}.error`)) {
              return
            }
            document.querySelector(`.${key}.error`).textContent = data.errors[key]
          }
        }

        if (data.user) {
          location.assign('/')
        }

      } catch (err) {
        console.log(err)
      }
    })
  </script>
  
  <!--D2 nakalagay footer-->
  <%- include('../partials/footer'); -%>

</body>

</html>